---
import meUrl from '@/assets/me.jpg'
import { SITE_TITLE } from '../consts'
import { buttonVariants } from '@/components/ui/button'
import ImageWithBlurhash from '@/components/image-with-blurhash.astro'
import { MobileNav } from '@/components/mobile-nav'

const navItems = [
  { title: 'About', to: '/about' },
  { title: 'Bookmarks', to: '/bookmarks' },
  { title: 'Work', to: '/work' },
]
---

<header class="border-b">
  <nav class="container mx-auto flex items-center justify-between py-3">
    <h2>
      <a href="/" class="flex items-center gap-3">
        <ImageWithBlurhash
          src={meUrl}
          alt={SITE_TITLE}
          className="h-10 w-10 rounded-full"
        />

        <span class="font-medium">Luke Rucker</span>
      </a>
    </h2>

    <ul class="hidden md:flex items-center gap-2">
      {
        navItems.map(navItem => (
          <li>
            <a
              href={navItem.to}
              class:list={[
                Astro.url.pathname === navItem.to &&
                  'bg-accent text-accent-foreground',
                buttonVariants({ variant: 'ghost' }),
              ]}
            >
              {navItem.title}
            </a>
          </li>
        ))
      }
    </ul>

    <div class="md:hidden">
      <MobileNav client:visible currentPathname={Astro.url.pathname} />
    </div>
  </nav>
</header>
